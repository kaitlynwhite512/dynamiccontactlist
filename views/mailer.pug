doctype html
head
  title Contact Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')
block content
  .container
    .card
      .card-header
        h1 Enter A Contact
      .card-body
        form(action='thankyou' method='post').form
          fieldset
            .col.col-md-12
              .row
                p
                  .form-group
                    input#mr(type='radio' name='prefix' value='Mr.' required='')
                    label.px-2(for='mr') Mr.
                    input#mrs(type='radio' name='prefix' value='Mrs.' required='')
                    label.px-2(for='mrs') Mrs.
                    input#ms(type='radio' name='prefix' value='Ms.' required='')
                    label.px-2(for='ms') Ms.
                    input#dr(type='radio' name='prefix' value='Dr.' required='')
                    label.px-2(for='dr') Dr.
              .row
                p
                  .form-group
                    label.px-3(for='fname') First Name:
                    input#fname(type='text' name='fname' required='')
                    label.px-3(for='lname') Last Name:
                    input#lname(type='text' name='lname' required='')
              .row
                p
                  .form-group
                    label.px-3(for='street') Street:
                    input#street(type='text' name='street' required='')
                    label.px-3(for='city') City:
                    input#city(type='text' name='city' required='')
                .row
                p
                  .form-group
                    label.px-3(for='states') State
                    select#states(name='states' required='')
                      option(value='NJ') NJ
                      option(value='NY') NY
                      option(value='PA') PA
                      option(value='CT') CT
                    label.px-3(for='zip') Zip:
                    input#zip(type='text' name='zip' required='')
              .row
                p
                  .form-group
                    label.px-3(for='phone') Phone:
                    input#phone(type='text' name='phone' required='')
              .row
                p
                  .form-group
                    label.px-3(for='email') Email:
                    input#email(type='text' name='email' required='')
              .row
                p
                  .form-group
                    label.px-2(for='contacts') How may we contact you?
                    input#contact1(type='checkbox' name='chkphone' value='Phone')
                    label.px-2(for='contact1') Phone
                    input#contact2(type='checkbox' name='chkmail' value='Mail')
                    label.px-2(for='contact2') Mail
                    input#contact3(type='checkbox' name='chkemail' value='Email')
                    label.px-2(for='contact3') Email
                    input#contact4(type='checkbox' name='chkany' value='Any')
                    label.px-2(for='contact4') Any
              br
            .row
            button.btn.btn-primary(type='submit') Create Contact
      br