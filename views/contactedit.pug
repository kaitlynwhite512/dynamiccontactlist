doctype html
head
  title Update Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')
block content
  .container
    .card
      .card-header
        h1 Update Content
      .card-body
        form(action='updatesuccessful' method='post')
          fieldset
            br
            .row
              p
                if con.prefix === 'Mr.'
                  input#mr(type='radio', name='prefix', value='Mr.', checked='checked')
                  | Mr.
                  input#mrs(type='radio', name='prefix', value='Mrs.')
                  | Mrs.
                  input#ms(type='radio', name='prefix', value='Ms.')
                  | Ms.
                  input#dr(type='radio', name='prefix', value='Dr.')
                  | Dr.
                if con.prefix === 'Mrs.'
                  input#mr(type='radio', name='prefix', value='Mr.')
                  | Mr.
                  input#mrs(type='radio', name='prefix', value='Mrs.', checked='checked')
                  | Mrs.
                  input#ms(type='radio', name='prefix', value='Ms.')
                  | Ms.
                  input#dr(type='radio', name='prefix', value='Dr.')
                  | Dr.
                if con.prefix === 'Ms.'
                  input#mr(type='radio', name='prefix', value='Mr.')
                  | Mr.
                  input#mrs(type='radio', name='prefix', value='Mrs.')
                  | Mrs.
                  input#ms(type='radio', name='prefix', value='Ms.', checked='checked')
                  | Ms.
                  input#dr(type='radio', name='prefix', value='Dr.')
                  | Dr.
                if con.prefix === 'Dr.'
                  input#mr(type='radio', name='prefix', value='Mr.')
                  | Mr.
                  input#mrs(type='radio', name='prefix', value='Mrs.')
                  | Mrs.
                  input#ms(type='radio', name='prefix', value='Ms.')
                  | Ms.
                  input#dr(type='radio', name='prefix', value='Dr.', checked='checked' )
                  | Dr.
            .row
              p
                label.px-3(for='fname') First Name:
                input#fname(type='text', name='fname', value=con.fname)
                label.px-3(for='lname') Last Name:
                input#lname(type='text' name='lname' value=con.lname)
            .row
              p
                label.px-3(for='street') Street:
                input#street(type='text' name='street', value=con.street)
                label.px-3(for='city') City:
                input#city(type='text' name='city', value=con.city)
            .row
              p
                label.px-3(for='states') State
                select#states(name='states', value=con.state)
                  if con.state === 'NJ'
                    option(value='NJ') NJ
                    option(value='NY') NY
                    option(value='PA') PA
                    option(value='CT') CT
                  if con.state === 'NY'
                    option(value='NY') NY
                    option(value='NJ') NJ
                    option(value='PA') PA
                    option(value='CT') CT
                  if con.state === 'PA'
                    option(value='PA') PA
                    option(value='NY') NY
                    option(value='NJ') NJ
                    option(value='CT') CT
                  if con.state === 'CT'
                    option(value='CT') CT
                    option(value='PA') PA
                    option(value='NY') NY
                    option(value='NJ') NJ
                label.px-3(for='zip') Zip:
                input#zip(type='text' name='zip', value=con.zip)
            .row
              p
                label.px-3(for='phone') Phone:
                input#phone(type='text' name='phone' value=con.phone)
            .row
              p
                label.px-3(for='email') Email:
                input#email(type='text' name='email' value=con.email)
            .row
              p
                label.px-3(for='contacts') How may we contact you?
                if(con.cbp === 'Phone')
                  input#contact1(type='checkbox', name='chkphone', value='Phone', checked='checked')
                  | Phone
                else
                  input#contact1(type='checkbox', name='chkphone', value='Phone')
                  | Phone
                if(con.cbm === 'Mail')
                  input#contact2(type='checkbox' name='chkmail' value='Mail', checked='checked')
                  | Mail
                else
                  input#contact2(type='checkbox' name='chkmail' value='Mail')
                  | Mail
                if(con.cbe === 'Email')
                  input#contact3(type='checkbox' name='chkemail' value='Email', checked='checked')
                  | Email
                else
                  input#contact3(type='checkbox' name='chkemail' value='Email')
                  | Email
                if(con.cbd === 'Any')
                  input#contact4(type='checkbox' name='chkany' value='Any', checked='checked')
                  | Any
                else
                  input#contact3(type='checkbox' name='chkemail' value='Any')
                  | Any
            br
            input(type='hidden', name='currentid', value=con._id)
          .row
            p
              button.btn.btn-primary(type='submit') Create Contact
        br